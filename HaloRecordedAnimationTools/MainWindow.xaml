<Window x:Class="HaloRecordedAnimationTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Halo Recorded Animation Tools" Height="450" Width="771" MouseDown="Window_MouseDown" Closing="Window_Closing">
    <Grid x:Name="mainGrid" Focusable="True" FocusVisualStyle="{x:Null}">
        <Menu x:Name="menu" VerticalAlignment="Top" Height="22">
            <MenuItem Header="_File" Height="22">
                <MenuItem x:Name="miOpen" Header="_Open" Click="MiOpen_Click"/>
                <Separator/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="Save _As"/>
                <Separator/>
                <MenuItem x:Name="miExit" Header="_Exit" Click="MiExit_Click"/>
            </MenuItem>
            <MenuItem x:Name="miSettings" Header="_Settings" Click="MiSettings_Click"/>
        </Menu>
    </Grid>
</Window>
